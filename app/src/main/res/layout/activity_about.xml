<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_default_color_primary"
    android:orientation="vertical"
    android:scrollbarAlwaysDrawHorizontalTrack="true"
    android:scrollbars="horizontal|vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/button7"
            android:layout_width="121dp"
            android:layout_height="wrap_content"
            android:hint="Home"
            app:icon="@android:drawable/ic_input_get" />

        <Button
            android:id="@+id/button8"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Meniu"
            app:icon="@android:drawable/ic_menu_sort_by_size" />

        <Button
            android:id="@+id/button9"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Contact"
            app:icon="@android:drawable/ic_dialog_email" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="400dp"
            android:layout_height="65dp"
            android:gravity="center"
            android:text="Specialty coffee | breakfast &amp; brunch | lunch | dinner"
            android:textColor="@android:color/system_accent1_200"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="208dp"
        android:layout_height="37dp"
        android:drawableStart="?attr/actionModePasteDrawable"
        android:gravity="center"
        android:text="Categorie: Cafenea"
        android:textColor="@android:color/system_accent1_200"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="202dp"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="Basic info:"
        android:textColor="@android:color/system_accent1_200"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="242dp"
        android:layout_height="37dp"
        android:drawableStart="@android:drawable/star_big_off"
        android:gravity="center"
        android:text="RatingÂ·4.5(81 Reviews)"
        android:textColor="@android:color/system_accent1_200"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="144dp"
        android:layout_height="37dp"
        android:drawableStart="@android:drawable/ic_menu_recent_history"
        android:gravity="center"
        android:text="Program:"
        android:textColor="@android:color/system_accent1_200"
        android:textSize="17sp" />

    <MultiAutoCompleteTextView
        android:id="@+id/multiAutoCompleteTextView"
        android:layout_width="423dp"
        android:layout_height="wrap_content"
        android:cursorVisible="false"
        android:enabled="false"
        android:text="Monday                          CLOSED
                      Tuesday                   07:30 AM - 10:30 PM
                      Wednesday              07:30 AM - 10:30 PM
                      Thursday                  07:30 AM - 10:30 PM
                      Friday                        07:30 AM - 10:30 PM
                      Saturday                   07:30 AM - 10:30 PM
                      Sunday                      07:30 AM - 05:00 PM"
        android:textColor="@android:color/system_accent1_200" />

</LinearLayout>